{
    "compilerOptions": {
        "esModuleInterop": true,
        "module": "commonJS",
        "moduleResolution": "Node",
        "outDir": "dist",
        "rootDirs": ["src", "tests"],
        "baseUrl": "./src",
        "paths": {
          "@/*": ["*"]
        },
        "plugins": [
          {
            "transform": "typescript-transform-paths"
          }
        ]
    },
    "include": ["src", "tests"],
    "ts-node": {
        "esm": true
    }
}